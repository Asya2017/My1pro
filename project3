#include <stdio.h>
#include <stdlib.h>
int main(int argc, char **argv) {
    FILE *file = fopen(argv[1], "r");
    int A, B;
    fscanf(file, "%d %d", &A, &B);
    
    int **matrix = malloc(N * sizeof(int*));
    for (int i = 0; i < A; i++)
        matrix[i] = malloc(B * sizeof(int));
    
    for (int i = 0; i < A; i++)
        for (int j = 0; j < B; j++)
            fscanf(file, "%d", &matrix[i][j]);
    fclose(file);
    
    int S = 0;
    for (int i = 0; i < (A < B ? A : B); i++)
        S += matrix[i][i];
  
    if (A >= 3) {
        int max_idx = 0;
        for (int j = 1; j < B; j++)
            if (matrix[2][j] > matrix[2][max_idx])
                max_idx = j;
        matrix[2][max_idx] = S;
    }

    for (int i = 0; i < A; i++)
        free(matrix[i]);
    free(matrix);
    return 0;
}
