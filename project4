#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void bub(int* arr, int size) {
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

void ins(int* arr, int size) {
    for (int i = 1; i < size; i++) {
        int key = arr[i];
        int j = i - 1;
        
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}

void mer(int* arr, int left, int mid, int right) {
    int n1 = mid - left + 1;
    int n2 = right - mid;
    int L[n1], R[n2];
    
    for (int i = 0; i < n1; i++) L[i] = arr[left + i];
    for (int i = 0; i < n2; i++) R[i] = arr[mid + 1 + i];
    
    int i = 0, j = 0, k = left;
    
    while (i < n1 && j < n2) {
        if (L[i] <= R[j]) arr[k++] = L[i++];
        else arr[k++] = R[j++];
    }
    
    while (i < n1) arr[k++] = L[i++];
    while (j < n2) arr[k++] = R[j++];
}

void mer_sort_rec(int* arr, int left, int right) {
    if (left < right) {
        int mid = left + (right - left) / 2;
        mer_sort_rec(arr, left, mid);
        mer_sort_rec(arr, mid + 1, right);
        mer(arr, left, mid, right);
    }
}

void mer_sort(int* arr, int size) {
    mer_sort_rec(arr, 0, size - 1);
}

int main() {
    srand(time(NULL));
    
    int sizes[] = {10, 1000, 10000, 100000};
    char* size_names[] = {"10", "1,000", "10,000", "100,000"};
    int num_sizes = 4;
    
    printf("Размер | Пузырек | Вставки | Слияние\n");
    printf("------------------------------------\n");
    
    for (int i = 0; i < num_sizes; i++) {
        int size = sizes[i];
        
        int* arr = (int*)malloc(size * sizeof(int));
        int* arr1 = (int*)malloc(size * sizeof(int));
        int* arr2 = (int*)malloc(size * sizeof(int));
        int* arr3 = (int*)malloc(size * sizeof(int));
        
        for (int j = 0; j < size; j++) {
            arr[j] = rand() % 10000;
        }
        
        for (int j = 0; j < size; j++) {
            arr1[j] = arr[j];
            arr2[j] = arr[j];
            arr3[j] = arr[j];
        }
        
        clock_t start = clock();
        bub_sort(arr1, size);
        clock_t end = clock();
        double time1 = (double)(end - start) / CLOCKS_PER_SEC;
        
        start = clock();
        ins_sort(arr2, size);
        end = clock();
        double time2 = (double)(end - start) / CLOCKS_PER_SEC;
        
        start = clock();
        mer_sort(arr3, size);
        end = clock();
        double time3 = (double)(end - start) / CLOCKS_PER_SEC;
       
        printf("%7s | %8.5f | %8.5f | %8.5f\n", 
               size_names[i], time1, time2, time3);
        
        free(arr);
        free(arr1);
        free(arr2);
        free(arr3);
    }
    
    return 0;
}
